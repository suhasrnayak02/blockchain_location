            background-position: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        h1 {
            margin-bottom: 20px;
            color: #fff;
        }

        p {
            color: #fff;
        }

        .advantages {
            margin-top: 50px;
            color: #fff;
        }

        .advantages h2 {
            color: #1E90FF;
        }

        .advantages ul {
            list-style-type: none;
            padding: 0;
        }

        .advantages li {
            margin-bottom: 10px;
        }

